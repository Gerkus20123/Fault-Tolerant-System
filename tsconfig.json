{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "types": ["node", "express", "body-parser"],
    "moduleResolution": "node", 
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
    "include": [
      "local-dev/"
  ]
}