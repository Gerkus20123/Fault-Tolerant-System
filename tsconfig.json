{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2018",
    "types": ["node", "express", "body-parser"],
    "moduleResolution": "NodeNext", 
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}